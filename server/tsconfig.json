{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2020",
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "lib": ["es2019"],
    "paths": {
      "~/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/tests/**/*"]
}
