{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "api/*": ["./api/*"],
      // See https://github.com/sfbrigade/project-compass/pull/20#discussion_r1121094435 for why this is needed
      "~/*": ["../server/src/*"]
    }
  },
  "include": ["next-env.d.ts", "references.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
